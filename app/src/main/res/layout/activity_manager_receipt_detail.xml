<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_accident_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_accident_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="사고 정보"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_accident_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위경도 좌표"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_accident_info"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_accident_location_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:text="(37.5, 125.6)"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_accident_location"
            app:layout_constraintStart_toEndOf="@id/tv_accident_location" />

        <TextView
            android:id="@+id/tv_accident_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일시"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_accident_location"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_accident_date_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-07-21"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/tv_accident_location_info"
            app:layout_constraintTop_toTopOf="@+id/tv_accident_date" />
        <TextView
            android:id="@+id/tv_accident_road"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도로명"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_accident_date"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_accident_road_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중부내륙고속도로"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_accident_road"
            app:layout_constraintStart_toStartOf="@+id/tv_accident_date_info" />
        <TextView
            android:id="@+id/tv_accident_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사고 내용"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_accident_road"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_accident_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="고라니 사고"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toBottomOf="@+id/tv_accident_detail"
            app:layout_constraintStart_toStartOf="@id/tv_accident_road_info" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_accident_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_accident_info"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_accident_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="사진"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_accident_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_accident_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_animal_classification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_accident_image"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_animal_classification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="동물종 분류"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_animal_classification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_animal_classification"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/tv_animal_classification_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="98.5% 고라니로 분석되었습니다"
            app:layout_constraintTop_toBottomOf="@id/iv_animal_classification"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/tv_btn_ok"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="처리하기"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:background="@drawable/skyblue_round_background"
        />

</androidx.constraintlayout.widget.ConstraintLayout>